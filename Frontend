    <script>
        // Create animated ocean creatures (reduced for professional look)
        const oceanBg = document.querySelector('.ocean-bg');

        // Add bubbles (reduced from 35 to 15)
        for(let i = 0; i < 15; i++) {
            const bubble = document.createElement('div');
            bubble.className = 'bubble';
            bubble.style.left = Math.random() * 100 + '%';
            bubble.style.width = (12 + Math.random() * 25) + 'px';
            bubble.style.height = bubble.style.width;
            bubble.style.animationDelay = Math.random() * 15 + 's';
            bubble.style.animationDuration = (10 + Math.random() * 12) + 's';
            oceanBg.appendChild(bubble);
        }

        // Add swimming fish (reduced from 20 to 8)
        const fishTypes = ['üêü', 'üê†', 'üê°'];
        for(let i = 0; i < 8; i++) {
            const fish = document.createElement('div');
            fish.className = 'fish';
            
            const rand = Math.random();
            if(rand > 0.7) {
                fish.classList.add('large');
            } else if(rand > 0.4) {
                fish.classList.add('small');
            }
            
            fish.textContent = fishTypes[Math.floor(Math.random() * fishTypes.length)];
            fish.style.top = (5 + Math.random() * 85) + '%';
            fish.style.animationDelay = Math.random() * 25 + 's';
            fish.style.animationDuration = (18 + Math.random() * 20) + 's';
            oceanBg.appendChild(fish);
        }

        // Add jellyfish (reduced from 8 to 3)
        const jellyfishTypes = ['ü™º'];
        for(let i = 0; i < 3; i++) {
            const jellyfish = document.createElement('div');
            jellyfish.className = 'jellyfish';
            jellyfish.textContent = jellyfishTypes[Math.floor(Math.random() * jellyfishTypes.length)];
            jellyfish.style.left = (10 + Math.random() * 80) + '%';
            jellyfish.style.top = (10 + Math.random() * 60) + '%';
            jellyfish.style.animationDelay = Math.random() * 20 + 's';
            jellyfish.style.animationDuration = (15 + Math.random() * 10) + 's';
            oceanBg.appendChild(jellyfish);
        }

        // Add seaweed at the bottom (reduced from 15 to 8)
        for(let i = 0; i < 8; i++) {
            const seaweed = document.createElement('div');
            seaweed.className = 'seaweed';
            seaweed.style.left = (Math.random() * 100) + '%';
            seaweed.style.height = (120 + Math.random() * 120) + 'px';
            seaweed.style.width = (25 + Math.random() * 20) + 'px';
            seaweed.style.animationDelay = Math.random() * 5 + 's';
            seaweed.style.animationDuration = (4 + Math.random() * 4) + 's';
            oceanBg.appendChild(seaweed);
        }

        // Section navigation with active button tracking
        function showSection(sectionId) {
            // Hide all sections
            document.querySelectorAll('.section-view').forEach(section => {
                section.classList.remove('active');
            });

            // Show selected section
            document.getElementById(sectionId).classList.add('active');

            // Update nav button states
            document.querySelectorAll('.nav-btn').forEach(btn => {
                btn.classList.remove('active');
            });

            // Find and activate the corresponding nav button
            const navButtons = document.querySelectorAll('.nav-btn');
            navButtons.forEach(btn => {
                if(btn.textContent.toLowerCase().includes(sectionId) || 
                   (sectionId === 'home' && btn.textContent === 'Home') ||
                   (sectionId === 'problem' && btn.textContent === 'Our Problem') ||
                   (sectionId === 'solution' && btn.textContent === 'Our Solution') ||
                   (sectionId === 'impact' && btn.textContent === 'Our Impact') ||
                   (sectionId === 'sdg' && btn.textContent === 'SDG Goals') ||
                   (sectionId === 'join' && btn.textContent === 'Join Us')) {
                    btn.classList.add('active');
                }
            });

            // Scroll to top
            window.scrollTo({ top: 0, behavior: 'smooth' });

            // Show/hide back button
            const backBtn = document.getElementById('backBtn');
            if (sectionId === 'home') {
                backBtn.classList.remove('visible');
            } else {
                backBtn.classList.add('visible');
            }
        }

        // Solution tab switching
        function showSolutionTab(tabId) {
            // Hide all solution content
            document.querySelectorAll('.solution-content').forEach(content => {
                content.classList.remove('active');
            });

            // Show selected content
            document.getElementById(tabId).classList.add('active');

            // Update tab button states
            document.querySelectorAll('.solution-tab').forEach(tab => {
                tab.classList.remove('active');
            });

            // Activate clicked tab
            event.target.classList.add('active');

            // Scroll to top of solution section
            document.getElementById('solution').scrollIntoView({ behavior: 'smooth', block: 'start' });
        }

        // Add hover effects to all interactive buttons
        document.querySelectorAll('button, .quick-nav-card, .impact-card, .benefit-card, .feature-card, .stat-card, .sdg-card').forEach(elem => {
            elem.addEventListener('mouseenter', function() {
                if(this.tagName === 'BUTTON') {
                    this.style.transform = 'translateY(-3px)';
                }
            });
            elem.addEventListener('mouseleave', function() {
                if(this.tagName === 'BUTTON') {
                    this.style.transform = 'translateY(0)';
                }
            });
        });

        // Set initial active state
        document.querySelector('.nav-btn').classList.add('active');
    </script>

</body></html>
